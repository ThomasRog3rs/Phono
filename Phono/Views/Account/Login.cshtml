@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var hasUsers = ViewData["HasUsers"] as bool? ?? true;
}

<div class="auth-panel">
    <div class="auth-panel-header">
        <h1 class="auth-title">Sign in</h1>
        <p class="auth-subtitle">Welcome back to Phono</p>
    </div>

    <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post" class="auth-form">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="auth-error-summary"></div>

        <div class="auth-form-group">
            <label asp-for="Email" class="auth-label"></label>
            <div class="auth-input-wrapper">
                <svg class="auth-input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <input asp-for="Email" class="auth-input" placeholder="Email" autocomplete="email" />
            </div>
            <span asp-validation-for="Email" class="auth-error"></span>
        </div>

        <div class="auth-form-group">
            <label asp-for="Password" class="auth-label"></label>
            <div class="auth-input-wrapper">
                <svg class="auth-input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <input asp-for="Password" class="auth-input" placeholder="Password" autocomplete="current-password" />
            </div>
            <span asp-validation-for="Password" class="auth-error"></span>
        </div>

        <div class="auth-form-group">
            <label class="auth-checkbox">
                <input asp-for="RememberMe" class="auth-checkbox-input" />
                <span class="auth-checkbox-label">Remember me</span>
            </label>
        </div>

        <button type="submit" class="auth-button">Sign in</button>
    </form>

    @if (!hasUsers)
    {
        <div class="auth-divider">
            <span>or</span>
        </div>
        <div class="auth-setup-prompt">
            <p class="auth-setup-text">No account yet?</p>
            <a asp-action="Register" class="auth-setup-link">Set up your account</a>
        </div>
    }
</div>
